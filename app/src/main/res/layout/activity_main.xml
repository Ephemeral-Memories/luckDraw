<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:id="@+id/mNameTextView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:background="#473A41"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="25dp"/>
    <Button
            android:text="START"
            android:textAllCaps="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/mStartButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#9BCDF8"
            android:layout_marginTop="92dp" app:layout_constraintTop_toBottomOf="@+id/mNameTextView"
            app:layout_constraintHorizontal_bias="0.0"
            android:textColor="@android:color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>